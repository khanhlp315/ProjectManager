<Window x:Class="GUI.AccessingDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManager"
        mc:Ignorable="d"
        
        Title="AccessingDatabase" Height="600" Width="900">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="MessageTextBlock"
                       Style="{StaticResource CustomTextblockStyle}"
                       Text="Connecting to database..." />
            <ProgressBar x:Name="IndeterminateProgressBar"
                         Height="15"
                         Width="400"
                         Margin="0,10,0,0"
                         IsIndeterminate="True" />
            <Button x:Name="RetryButton"
                    Content="Retry"
                    Width="75"
                    Height="25"
                    Visibility="Collapsed"
                    Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
