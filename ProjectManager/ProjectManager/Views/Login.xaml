<UserControl x:Class="ProjectManager.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:utils="clr-namespace:ProjectManager.Utils"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="App name here" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>

        <TextBox Grid.Row="1" Text="{Binding Username}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
        <PasswordBox  utils:PasswordHelper.Attach="True" utils:PasswordHelper.Password="{Binding Password, Mode=TwoWay}" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></PasswordBox>

        <Button Grid.Row="3" Content="Login" Command="{Binding Path=LoginCommand}"></Button>
    </Grid>
</UserControl>
